<p>Find me in app/views/restaurants/index.html.erb</p>


<div class="container">


<h3>Restaurants:</h3>

<h1>My list of restaurants</h1>
<%= link_to "Add New Restaurant", new_restaurant_path(@restaurant), class: "btn btn-warning" %>
<% @restaurants.each do |restaurant| %>
  <h2><%= restaurant.name %></h2>
  <p><%= restaurant.category %></p>
  <p><%= restaurant.phone_number %></p>
  <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary" %>
  <p>------------------------------------------------</p>
<% end %>

</div>
